#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBBOOST_VERSION       $libboost.version.project_number$ULL
#define LIBBOOST_VERSION_STR   "$libboost.version.project$"
#define LIBBOOST_VERSION_ID    "$libboost.version.project_id$"

#define LIBBOOST_VERSION_MAJOR $libboost.version.major$
#define LIBBOOST_VERSION_MINOR $libboost.version.minor$
#define LIBBOOST_VERSION_PATCH $libboost.version.patch$

#define LIBBOOST_PRE_RELEASE   $libboost.version.pre_release$

#define LIBBOOST_SNAPSHOT_SN   $libboost.version.snapshot_sn$ULL
#define LIBBOOST_SNAPSHOT_ID   "$libboost.version.snapshot_id$"
